<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="jelly_bean_mr1">

    <!-- https://www.materialpalette.com/brown/blue-grey -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppThemeFloating" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside" tools:targetApi="honeycomb">true</item>
    </style>

    <style name="SimpleDividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">#30000000</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppLargeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppMediumText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/app_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="AppCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">#fff</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <!-- Book Details -->
    <style name="BookDetailsLabelText" parent="@style/AppMediumText">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="BookDetailsGridText" parent="@style/AppMediumText">
        <item name="android:layout_width">0dp</item>
        <item name="layout_gravity">fill_horizontal</item>
    </style>
</resources>
